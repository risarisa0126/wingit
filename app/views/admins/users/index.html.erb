<h1>ユーザー一覧</h1>

<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h3>ガイド</h3>
				<% @guides.each do |guide| %>
					<div class="col-12">
						<tr>
							<td><%= attachment_image_tag guide, :guide_profile_image, :fill, 1000, 1000, size: '40x40', class: "rounded-circle"  %></td>
					　		<td class="active"><%= guide.id %></td>
							<td><%= guide.guide_username %></td>
					    <td class="active"><%= guide.guide_lastname %></td>
					    <td class="active"><%= guide.guide_firstname %></td>
					    <td class="active"><%= guide.email %></td>
					    <td class="active"><%= guide.guide_age %></td>
			　			</tr>
					</div>
				<% end %>
		</div>
		<div class="col-sm-6">
			<h3>ツアーリスト</h3>
				<% @tourists.each do |tourist| %>
					<div class="col-12">
						<tr>
							<td><%= attachment_image_tag tourist, :tourist_profile_image, :fill, 1000, 1000, size: '40x40', class: "rounded-circle"  %></td>
					　		<td class="active"><%= tourist.id %></td>
							<td><%= tourist.tourist_username %></td>
					    <td class="active"><%= tourist.tourist_lastname %></td>
					    <td class="active"><%= tourist.tourist_firstname %></td>
					    <td class="active"><%= tourist.email %></td>
					    <td class="active"><%= tourist.tourist_age %></td>
			　			</tr>
					</div>
				<% end %>
		</div>
	</div>
</div>







<%= link_to "logout", destroy_admin_session_path, method: :delete %>