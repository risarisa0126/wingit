<h1>GUIDES</h1>

<div class="container">
	<div class="row">
			<%= search_form_for @search do |f| %>
		  <%= f.label :name, "Keyword" %>
		  <%= f.search_field :guide_lastname_cont %>

		  <%= f.label :guide_age %>
		  <%= f.number_field :guide_age_gteq %>以上〜
		  <%= f.number_field :guide_age_lt %>未満

		  <%= f.label :guide_gender %>
		　<%= f.radio_button :guide_gender_eq, '', {:checked => true} %>指定なし
		  <%= f.radio_button :guide_gender_eq, 1 %>男性
		  <%= f.radio_button :guide_gender_eq, 2 %>女性

		  <%= f.submit "検索" %>
		<% end %>
	</div>


<br>
