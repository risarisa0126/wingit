<h1>GUIDES</h1>

<div class="container">
	<div class="row">
		<div class="col-12 offset-lg-2">
			<%= search_form_for @q do |f| %>
				place
				<%= f.collection_select :able_to_guide_places_guide_place_cont, @able_to_guide_places, :id, :guide_place, :include_blank => '---' %>
				age
				  <%= f.number_field :guide_age_gteq %>〜
				  <%= f.number_field :guide_age_lt %>
				gender
			　<%= f.radio_button :guide_gender_eq, '', {:checked => true} %>blank
			  <%= f.radio_button :guide_gender_eq, 1 %>male
			  <%= f.radio_button :guide_gender_eq, 2 %>female
		</div>
	</div>
		<div class="row">
			<div class="col-12 offset-lg-2">
				date
				<%= f.date_field :dayofweeks_day_gteq, include_blank: true %>
			  placticing language
				<%= f.collection_select :guide_practicing_launguages_guide_practicing_cont, @guide_practicing_launguages, :id, :guide_practicing, :include_blank => '---' %>
			  <%= f.submit "serch" %>
			<% end %>
		</div>
	</div>


	<div class="row">
		<% @guides.each do |guide| %>
			<div class="col-lg-4 col-6" style="margin-top:70px;">
				<%= link_to guide_path(guide.id) do %>
		      <%= attachment_image_tag guide, :guide_profile_image, :fill, 1000, 1000, class: "rounded w-100" %>
		    <% end %>
		    <h5><%= guide.guide_username %></h5>
		    <h6><%= guide.guide_about_me.truncate(20) %></h6>
	  	</div>
		<% end %>
	</div>
	<%= paginate @guides %>
</div>
