		<div class="container">
			<div class="row">
				<% @guides.each do |guide| %>
					<div class="col">
						<%= link_to guide_path(guide.id) do %>
				      <%= attachment_image_tag guide, :guide_profile_image, :fill, 1000, 1000, size: '300x300', class: "rounded" %>
				    <% end %>
				    <div class="row"><%= guide.guide_username %></div>
				    <div class="row"><%= guide.guide_about_me %></div>
			  	</div>
				<% end %>
