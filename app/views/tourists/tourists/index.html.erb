<h1>観光者を探す</h1>

<div class="container">
	<div class="row">
		<div class="col-12 offset-lg-2">
			<%= search_form_for @q do |f| %>
				観光地
				<%= f.collection_select :tourist_sightseeing_places_sightseeing_place_cont, @tourist_sightseeing_places, :id, :sightseeing_place, :include_blank => '---' %>
				年齢
				  <%= f.number_field :tourist_age_gteq %>〜
				  <%= f.number_field :tourist_age_lt %>
				性別
				<div class="form-check form-check-inline">
				　<%= f.radio_button :tourist_gender_eq, '', {:checked => true} %>特になし
				  <%= f.radio_button :tourist_gender_eq, 1 %>男性
				  <%= f.radio_button :tourist_gender_eq, 2 %>女性
				</div>
		</div>
	</div>
		<div class="row">
			<div class="col-12 offset-lg-2">
				日にち
				<%= f.date_field :fromdate_gteq, include_blank: true %>~<%= f.date_field :todate_lteq, include_blank: true %>
			  学習言語
			  <%= f.collection_select :tourist_practicing_launguages_tourist_practicing_cont , @tourist_practicing_launguages, :id, :tourist_practicing, :include_blank => '---' %>
			  <%= f.submit "serch" %>
			<% end %>
		</div>
	</div>

	<div class="row">
		<% @tourists.each do |tourist| %>
			<div class="col-lg-4 col-6" style="margin-top:70px;">
				<%= link_to tourist_path(tourist.id) do %>
		      <%= attachment_image_tag tourist, :tourist_profile_image, :fill, 1000, 1000, class: "rounded w-100" %>
		    <% end %>
		    <h5><%= tourist.tourist_username %></h5>
		    <h6><%= tourist.tourist_about_me.truncate(20) %></h6>
	  	</div>
		<% end %>
	</div>
	<%= paginate @tourists %>
</div>
